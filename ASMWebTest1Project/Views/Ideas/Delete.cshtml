                    <div class="container" id="ctn">
                        <h3 class="text-center" >Ideas</h3>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.ideaTitle)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ideaTitle)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.creatAt)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.creatAt)
                            </dd>



                            <dt style="display:none">
                                @Html.DisplayNameFor(model => model.fileI)
                            </dt>

                            <dd style="display:none">
                                @Html.DisplayFor(model => model.fileI)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.urlFile)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.urlFile)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.description)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.description)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Categories.categoryName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Categories.categoryName)
                            </dd>



                        </dl>


                    </div>
                    @using (Html.BeginForm())
